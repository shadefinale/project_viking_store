
<div class="col-xs-12">
	<div class="col-xs-12 text-center">
	  <h3>Saved Address (Optional)</h3>
	</div>

	<div class="col-xs-10 col-xs-offset-1">
	  <%= fields_for :address, address do |address_fields| %>
	  <div class="form_group">
	  	<%= label_tag :street_address, "Street Address" %><br>
	  	<%= text_field_tag :street_address %>
	  </div>
	  <div class="form_group">
	  	<%= label_tag :city, "City" %><br>
	  	<%= text_field_tag :city %>
	  </div>
	  <div class="form_group">
        <%= label_tag :state, "State" %><br>
	  	<%= collection_select(:state, :state_id, State.all, :id, :name) %>
	  </div>
	  <div class="form_group">
	  	<%= label_tag :zip_code, "Zip Code" %><br>
	  	<%= text_field_tag :zip_code %>
	  </div>
	  <% end %>
	</div>

</div>
