<div class="row products_list">
  <div class="col-xs-10 col-xs-offset-1">
      <div class="col-xs-2 col-xs-offset-8">
        <%= form_tag products_path, method: "get" do %>
          <div class="filter_dropdown">
            <%= collection_select(:category, :id, Category.all, :id, :name, selected: @selected, include_blank: 'All' ) %>
          </div>
      </div>

        <div class="col-xs-2  text-center">
          <%= submit_tag "Apply Filter", class: "btn btn-primary btn-block filter_btn"%>
        </div>
      <% end %>

  </div>
  <div class="col-xs-10 col-xs-offset-1">
    <%= render @products %>
  </div>
</div>

